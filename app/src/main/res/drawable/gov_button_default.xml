<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0000aa"/>
            <corners
                android:topLeftRadius="2dip"
                android:topRightRadius="2dip"
                android:bottomLeftRadius="2dip"
                android:bottomRightRadius="2dip"/>
        </shape>
    </item>
    <item android:top="2px" android:bottom="2px" android:left="2px" android:right="2px">
        <shape>
            <gradient
                android:startColor="#fff" android:endColor="#fff"
                android:type="linear" android:angle="270"
                android:centerX="0.5" android:centerY="0.5"/>
            <corners
                android:topLeftRadius="2dip"
                android:topRightRadius="2dip"
                android:bottomLeftRadius="2dip"
                android:bottomRightRadius="2dip"/>
        </shape>
    </item>
</layer-list>